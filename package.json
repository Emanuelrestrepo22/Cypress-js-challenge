{
	"name": "upex-cypress",
	"version": "4",
	"description": "Cypress Automation",
	"main": "index.js",
	"homepage": "https://github.com/upex-galaxy/cypress-blackhole#readme",
	"scripts": {
		"test": "cypress open",
		"test:run": "cypress run --browser electron --spec",
		"test:ci": "cypress run --spec",
		"test:ci:regression": "cypress run",
		"junit:rm:report": "rm cypress/tests_results/junit/* || true",
		"junit:merge:reports": "jrm cypress/tests_results/junit/regression-report.xml \"cypress/tests_results/junit/*.xml\"",
		"mocha:rm:report": "rm cypress/tests_results/mocha/* || true",
		"clean:reports": "npm run junit:del:report && npm run mocha:del:report",
		"mocha:merge:reports": "mochawesome-merge \"cypress/tests_results/mocha/*.json\" > \"cypress/tests_results/regression_mocha.json\"",
		"mocha:gen:report": "marge cypress/tests_results/regression_mocha.json",
		"report": "npm run junit:merge:reports && npm run mocha:merge:reports && npm run mocha:gen:report",
		"prettier:write": "npx prettier --write cypress",
		"prettier:check": "npx prettier --check cypress",
		"lint:check": "npx eslint cypress",
		"lint:fix": "npx eslint --fix cypress"
	},
	"keywords": ["upexgalaxy"],
	"author": "Uper",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@bahmutov/cypress-esbuild-preprocessor": "2.2.0",
		"@faker-js/faker": "8.3.1",
		"@shelex/cypress-allure-plugin": "2.40.1",
		"@types/node": "20.11.5",
		"@typescript-eslint/eslint-plugin": "6.19.0",
		"@typescript-eslint/parser": "6.19.0",
		"allure-commandline": "2.26.0",
		"cypress-file-upload": "5.0.8",
		"cypress-mochawesome-reporter": "3.8.0",
		"cypress-multi-reporters": "1.6.4",
		"cypress-plugin-api": "2.11.1",
		"cypress-plugin-steps": "1.1.1",
		"cypress": "13.6.1",
		"dotenv": "16.3.1",
		"esbuild": "0.19.11",
		"eslint-plugin-chai-friendly": "0.7.4",
		"eslint-plugin-cypress": "2.15.1",
		"eslint-plugin-only-warn": "1.1.0",
		"eslint": "8.56.0",
		"junit-report-merger": "6.0.3",
		"mocha-junit-reporter": "2.2.1",
		"mocha": "10.2.0",
		"mochawesome-merge": "4.3.0",
		"mochawesome-report-generator": "6.2.0",
		"mochawesome": "7.1.3",
		"prettier": "3.2.4",
		"typescript": "5.3.3"
	}
}
