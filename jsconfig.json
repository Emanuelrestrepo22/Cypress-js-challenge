{
	"compilerOptions": {
		"esModuleInterop": true,
		"types": [
			"cypress",
			"cypress-file-upload",
			"cypress-xpath",
			"cypress-downloadfile",
			"cypress-plugin-api",
			"@shelex/cypress-allure-plugin",
			"cypress-plugin-steps"
		],
		"paths": {
			"@pages/*": ["./cypress/support/pages/*"],
			"@helper/*": ["./cypress/support/helper/*"],
			"@data/*": ["./cypress/fixtures/data/*"]
		}
	},
	"exclude": ["node_modules"]
}
